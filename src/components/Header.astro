<header>
  <h1>
    m<span>ichael</span>
    <span>&nbsp;</span>y<span>uen</span>
  </h1>
  <nav>
    <ul class="nav-links">
      <li><a href="/">bio.</a></li>
      <li><a href="/about">about.</a></li>
      <li><a href="/blog">blog.</a></li>
      <li><a href="/tags">tags.</a></li>
    </ul>
  </nav>
</header>

<style>
  header {
    align-items: center;
    /* background: ${({ theme }) => theme.colors.background}; */
    background: #fff;
    /* border-bottom: 1px solid ${({ theme }) => theme.colors.gray}; */
    border-bottom: 1px solid rgb(238, 238, 238);
    display: flex;
    flex-direction: column;
    /* padding: ${({ theme }) => theme.space[3]}px; */
    padding: 16px;
    position: sticky;
    top: 0;
    width: 100%;
    z-index: 1;
  }

  h1 {
    font-family: var(--font-pacifico), serif;
    line-height: 1.15;
    /* margin-bottom: ${({ theme }) => theme.space[3]}px; */
    margin-bottom: 16px;

    span {
      display: inline-block;
      width: auto;
      transition:
        opacity 600ms ease 600ms,
        width 300ms ease 300ms;

      &:first-child {
        width: 80px;
      }

      &:nth-child(2) {
        width: 9px;
      }

      &:last-child {
        width: 45px;
      }
    }

    &.not-at-top {
      span {
        opacity: 0;
        width: 0 !important;
        transition:
          opacity 600ms ease 300ms,
          width 300ms ease 600ms;
      }
    }
  }

  .nav-links {
    display: flex;
    font-family: var(--font-gaegu), cursive;
    font-size: 18px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    color: inherit;
    font-size: 24px;
    line-height: 1;
    padding-right: 8px;
  }
</style>

<script>
  const SCROLL_THRESHOLD = 120;
  window.addEventListener("scroll", () => {
    const isNotAtTop = window.pageYOffset > SCROLL_THRESHOLD;
    document
      .querySelector("header h1")
      ?.classList.toggle("not-at-top", isNotAtTop);
  });
</script>
